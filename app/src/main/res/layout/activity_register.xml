<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/fl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image_douban"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:background="@drawable/douban"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:layout_below="@+id/fl_image" >

            <TextView
                android:id="@+id/user"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:padding="1dp"
                android:text="邮箱"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_user"
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/user"
                android:background="#C0C0C0" />

            <EditText
                android:id="@+id/et_userInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/view_user"
                android:background="@drawable/shape"
                android:ems="19"
                android:hint="请输入邮箱"
                android:padding="1dp"
                android:textSize="15sp" >

            </EditText>

            <ImageView
                android:id="@+id/iv_delUser"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_below="@+id/username_layout" >

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:padding="1dp"
                android:text="密码"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_pass"
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/tv_pass"
                android:background="#C0C0C0" />

            <EditText
                android:id="@+id/et_passInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/view_pass"
                android:background="@drawable/shape"
                android:ems="19"
                android:inputType="textPassword"
                android:hint="请输入六位以上密码"
                android:padding="1dp"
                android:textSize="15sp" >
            </EditText>

            <ImageView
                android:id="@+id/iv_delPass"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/delete" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_below="@+id/rl_password" >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:padding="1dp"
                android:text="昵称"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_name"
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="#C0C0C0" />

            <EditText
                android:id="@+id/et_nameInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/view_name"
                android:background="@drawable/shape"
                android:ems="19"
                android:hint="请输入昵称"
                android:padding="1dp"
                android:textSize="15sp" >

            </EditText>
            <ImageView
                android:id="@+id/iv_delName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/delete" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/rl_name"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/button_shape"
            android:text="下一步"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:src="@drawable/back" />
</RelativeLayout>